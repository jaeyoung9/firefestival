<!-- 민재영 - amin  -->

	<!-- 페이징  -->
	<select id="member" parameterType="hashmap" resultType="hashmap">
		<include refid="common.pagingPre" />
		<![CDATA[
		SELECT
			ROW_NUMBER() OVER (ORDER BY USER_NUM DESC) RNUM,
			USER_NUM, USER_ID, USER_NIC, USER_PW, USER_BLIND, USER_EVENT, AMIN_TIM, DEL_GB
		FROM (SELECT ROW_NUMBER() OVER (ORDER BY USER_NUM DESC) RNUM,
			USER_NUM, USER_ID, USER_NIC, USER_PW, USER_ORIGINAL, USER_NEW_IMG, USER_FILE_SIZE, USER_BLIND, USER_EVENT, AMIN_TIM, DEL_GB
		FROM TB_MEMBER)
		]]>
		<include refid="common.pagingPost" />
	</select>


