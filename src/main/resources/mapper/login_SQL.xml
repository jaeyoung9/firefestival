<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" " http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="login">

<select id="selectLoginUser" parameterType="hashmap" resultType="hashmap">
<![CDATA[
SELECT
*
FROM
TB_MEMBER
WHERE
USER_ID = #{USER_ID} AND
USER_PW = #{USER_PW}
]]>
</select>





<!-- 로그인 체크 -->
<select id="loginMemberCk" parameterType="hashmap" resultType="hashmap">
<![CDATA[
SELECT
*
FROM
TB_MEMBER
WHERE
USER_ID = #{USER_ID}

]]>
</select>
<!-- 아이디 찾기 -->
<select id="findId" parameterType="hashmap" resultType="hashmap">
<![CDATA[
SELECT
USER_ID
FROM
TB_MEMBER
WHERE
USER_NIC = #{USER_NIC}
]]>
</select>
<!-- 비밀번호 찾기 -->
<select id="findPw" parameterType="hashmap" resultType="hashmap">
<![CDATA[
SELECT
USER_PW
FROM
TB_MEMBER
WHERE
USER_ID = #{USER_ID}
]]>
</select>
</mapper>